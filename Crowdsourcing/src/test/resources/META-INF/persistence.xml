<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="crowdsourcing" transaction-type="RESOURCE_LOCAL">
            <!-- ??? --> <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
            <validation-mode>AUTO</validation-mode>
            <properties>
                <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
                <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
                <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
                <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/crowdsourcing"/>
                <property name="javax.persistence.jdbc.user" value="crowdsourcing"/>
                <property name="javax.persistence.jdbc.password" value="crowdsourcing"/>
            </properties>
        </persistence-unit>
</persistence>
